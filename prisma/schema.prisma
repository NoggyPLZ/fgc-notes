// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Game {
  id         String      @id @default(cuid())
  slug       String      @unique
  name       String
  characters Character[]
  logoUrl    String?
}

model Character {
  id              String  @id @default(cuid())
  slug            String  @unique
  name            String
  notesAsMain     Note[]  @relation("MainCharacterNotes")
  notesAsOpponent Note[]  @relation("OpponentCharacterNotes")
  Game            Game    @relation(fields: [gameId], references: [id])
  gameId          String
  story           String?
  avatarUrl       String?
  profileImageUrl String?

  @@index([gameId])
}

model Note {
  id          String       @id @default(cuid())
  content     String
  rating      Int          @default(1)
  updatedAt   DateTime     @updatedAt
  createdAt   DateTime     @default(now()) @db.Timestamp(6)
  Character   Character    @relation("MainCharacterNotes", fields: [characterId], references: [id])
  characterId String
  opponentId  String?
  Opponent    Character?   @relation("OpponentCharacterNotes", fields: [opponentId], references: [id])
  userId      String
  User        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    NoteCategory
  votes       Votes[]
  reports     Reports[]    @relation("ReportsOnNote")

  @@index([characterId])
  @@index([opponentId])
  @@index([userId])
}

enum NoteCategory {
  NEUTRAL
  MATCHUPS
  COMBOS
  SETPLAY
}

model User {
  id            String         @id @default(cuid())
  name          String         @unique
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now()) @db.Timestamp(6)
  verified      Boolean        @default(false)
  rating        Int            @default(1)
  role          Role           @default(USER)
  status        Status         @default(ACTIVE)
  avatarUrl     String?
  notes         Note[]
  votes         Votes[]
  verification  Verfication?
  passwordreset PasswordReset?
  Reports       Reports[]      @relation("ReportsByUser")
  News          News[]
  BugReport     BugReport[]
}

enum Status {
  ACTIVE
  DISABLED
}

enum Role {
  USER
  ADMIN
}

model Votes {
  id     String @id @default(cuid())
  userId String
  User   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  noteId String
  Note   Note   @relation(fields: [noteId], references: [id], onDelete: Cascade)
  value  Int

  @@unique([userId, noteId])
  @@index([noteId])
}

model Verfication {
  id        String   @id @default(cuid())
  userId    String   @unique
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String   @unique
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Reports {
  id         String @id @default(cuid())
  reportedBy String
  reporter   User   @relation("ReportsByUser", fields: [reportedBy], references: [id], onDelete: Cascade)
  noteId     String
  Note       Note   @relation("ReportsOnNote", fields: [noteId], references: [id], onDelete: Cascade)
  reason     String
  info       String

  @@index([noteId])
  @@index([reportedBy])
}

model News {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  content   String
  createdAt DateTime @default(now()) @db.Timestamp(6)

  @@index([userId])
}

model BugReport {
  id       String      @id @default(cuid())
  userId   String
  user     User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  category BugCategory
  status   BugStatus
  content  String

  @@index([userId])
}

enum BugCategory {
  UI
  UX
  PERFORMANCE
  FUNCTIONALITY
  DATA
  AUTH
  NETWORK
  ACCESSIBILITY
  OTHER
}

enum BugStatus {
  OPEN
  IN_PROGRESS
  FIXED
  CLOSED
}
