// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id         String      @id @default(cuid())
  slug       String      @unique
  name       String
  characters Character[]
}

model Character {
  id              String @id @default(cuid())
  slug            String @unique
  name            String
  notesAsMain     Note[] @relation("MainCharacterNotes")
  notesAsOpponent Note[] @relation("OpponentCharacterNotes")
  Game            Game   @relation(fields: [gameId], references: [id])
  gameId          String
}

model Note {
  id          String       @id @default(cuid())
  content     String
  rating      Int          @default(1)
  updatedAt   DateTime     @updatedAt
  createdAt   DateTime     @default(now())
  Character   Character    @relation("MainCharacterNotes", fields: [characterId], references: [id])
  characterId String
  opponentId  String?
  Opponent    Character?   @relation("OpponentCharacterNotes", fields: [opponentId], references: [id])
  userId      String
  User        User         @relation(fields: [userId], references: [id])
  category    NoteCategory
}

enum NoteCategory {
  NEUTRAL
  MATCHUPS
  COMBOS
  SETPLAY
}

model User {
  id        String   @id @default(cuid())
  name      String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  verified  Boolean  @default(false)
  rating    Int      @default(1)
  role      Role     @default(USER)
  status    Status   @default(ACTIVE)
  notes     Note[]
}

enum Status {
  ACTIVE
  DISABLED
}

enum Role {
  USER
  ADMIN
}
